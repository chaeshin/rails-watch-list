<div class='container-fluid p-0 bg-img' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU') %>)">
  <div class='row navbar'>
    <nav class='p-2 links'>
      <p><%= link_to lists_path, class: 'm-2 shadow-lg text-decoration-none btn btn-light' do %>
        <i class="fa-solid fa-film"></i>
      <% end %></p>
      <div class='d-flex'>
        <p><%= link_to 'New List', new_list_path, class: 'm-2 p-2 border rounded-pill shadow-lg text-decoration-none btn btn-light'%></p>
        <p><%= link_to 'My List', lists_path, class: 'm-2 p-2 border rounded-pill shadow-lg text-decoration-none btn btn-light'%></p>
      </div>
    </nav>
  </div>
</div>

<div class="container m-5">
  <h1><%= @list.name %></h1>
    <div class='row'>
      <% @list.bookmarks.each do |bookmark| %>
          <div class='mt-5 col-12 col-md-6 col-lg-4 d-flex'>
            <%= render 'card', bookmark: bookmark, movie: bookmark.movie %>
          </div>
      <% end %>
    </div>
</div>

<%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'm-5 p-2 border rounded-pill shadow-sm text-decoration-none btn btn-light align-item-center' %>
</div>
